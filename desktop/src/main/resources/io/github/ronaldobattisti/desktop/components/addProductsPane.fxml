<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.DropdownButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Register products">
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Label>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Product name:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="productName"/>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Product description:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="productDescription"/>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Quantity available:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="quantAvailable"/>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Product price:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="productPrice"/>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Category:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <DropdownButton>
            <items>
                <MenuItem text="Desktop"/>
                <MenuItem text="Laptop"/>
                <MenuItem text="Component"/>
                <MenuItem mnemonicParsing="false" text="Storage"/>
                <MenuItem mnemonicParsing="false" text="Pheripheral"/>
                <MenuItem mnemonicParsing="false" text="Display"/>
                <MenuItem mnemonicParsing="false" text="Network"/>
                <MenuItem mnemonicParsing="false" text="Printer"/>
            </items>
        </DropdownButton>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label text="Product image:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
    </HBox>
    <Button mnemonicParsing="false" text="Register Product">
        <VBox.margin>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Button>
</VBox>
