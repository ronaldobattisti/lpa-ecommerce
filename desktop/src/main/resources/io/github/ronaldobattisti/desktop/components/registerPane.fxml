<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.ronaldobattisti.desktop.controllers.RegisterPaneController"
      fx:id="root">

    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Create an Account" />

    <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0"
          prefWidth="100.0"><!-- Alert area (hidden until needed) -->

        <HBox alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="150" spacing="5">
                <Label style="-fx-font-size: 13px;" text="First name"/>
                <TextField fx:id="firstNameField" prefHeight="33.0" prefWidth="469.0" promptText="John"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
            </VBox>

            <VBox alignment="CENTER_LEFT" prefWidth="150" spacing="5">
                <Label style="-fx-font-size: 13px;" text="Last name"/>
                <TextField fx:id="lastNameField" prefHeight="33.0" prefWidth="469.0" promptText="Doe"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
            </VBox>
        </HBox>

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 13px;" text="john.doe@email.com"/>
            <TextField fx:id="emailField" prefWidth="300" promptText="Enter your e-mail"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 13px;" text="Password"/>
            <PasswordField fx:id="passwordField" prefWidth="300" promptText="Enter your password"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 13px;" text="Address"/>
            <TextField fx:id="addressField" prefWidth="300" promptText="Enter your address"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 13px;" text="Phone"/>
            <TextField fx:id="phoneField" prefWidth="300" promptText="Enter your phone number"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
        </VBox>

        <!-- Links -->
        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 12px;" text="Already have an account?"/>
            <Hyperlink fx:id="signinLink" onAction="#showLoginPane" style="-fx-font-size: 12px;" text="Sign in here"/>
        </VBox>

        <!-- Submit button -->
        <Button fx:id="registerButton" onAction="#onRegisterButtonClick" prefHeight="35" prefWidth="200"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"
                text="SignUp"/>
    </VBox>
</VBox>
