<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Main container -->
<VBox alignment="CENTER"
      prefWidth="400"
      spacing="15"
      style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.ronaldobattisti.desktop.controllers.LoginPaneController"
      fx:id="root">

    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Welcome Back" />
    <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Log in to access your account" />
    <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0"
          prefWidth="100.0"><!-- Alert area (hidden until needed) -->
        <HBox fx:id="alertBox" managed="false"
              style="-fx-background-color: #ffe5e5; -fx-padding: 10; -fx-background-radius: 6;" visible="false">
            <Label fx:id="alertMessage" style="-fx-text-fill: #c00; -fx-font-size: 12px;"
                   text="Incorrect e-mail or password. Please try again."/>
        </HBox>

        <!-- Email -->
        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 13px;" text="E-mail"/>
            <TextField fx:id="emailField" prefHeight="33.0" prefWidth="469.0" promptText="Enter your e-mail"
                       style="-fx-background-radius: 6; -fx-padding: 8;"/>
        </VBox>

        <!-- Password -->
        <VBox alignment="CENTER_LEFT" prefWidth="300" spacing="5">
            <Label style="-fx-font-size: 13px;" text="Password"/>
            <PasswordField fx:id="passwordField" prefWidth="300" promptText="Enter your password"
                           style="-fx-background-radius: 6; -fx-padding: 8;"/>
        </VBox>

        <!-- Links -->
        <VBox alignment="CENTER" spacing="5">
            <Hyperlink fx:id="forgotLink" style="-fx-font-size: 12px;" text="Forgot your password?"/>
            <Label style="-fx-font-size: 12px;" text="Don't have an account?"/>
            <Hyperlink fx:id="signupLink" style="-fx-font-size: 12px;" text="Sign up"/>
        </VBox>

        <!-- Submit button -->
        <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefHeight="35" prefWidth="200"
                style="-fx-background-color: #007bff; -fx-text-fill: white;                        -fx-font-weight: bold; -fx-background-radius: 6;"
                text="Login"/>
    </VBox>

</VBox>
