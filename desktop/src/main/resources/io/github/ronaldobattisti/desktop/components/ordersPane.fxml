<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.ronaldobattisti.desktop.controllers.OrdersPaneController"
            prefWidth="800" prefHeight="400">

    <!-- Cabeçalho / filtros simples (opcional) -->
    <VBox spacing="6" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <!-- ...existing code... -->
        <ToolBar>
            <Label text="Pedidos"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Pesquisar..."/>
            <Button text="Atualizar" fx:id="refreshButton"/>
        </ToolBar>

        <!-- Tabela principal -->
        <TableView fx:id="ordersTable" prefHeight="350" prefWidth="800" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="ID" prefWidth="80"/>
                <TableColumn fx:id="customerColumn" text="Cliente" prefWidth="220"/>
                <TableColumn fx:id="dateColumn" text="Data" prefWidth="140"/>
                <TableColumn fx:id="totalColumn" text="Total" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
            </columns>

            <!-- Placeholder quando vazio -->
            <placeholder>
                <Label text="Nenhum pedido encontrado."/>
            </placeholder>
        </TableView>

        <!-- Rodapé simples (opcional) -->
        <HBox alignment="CENTER_RIGHT" spacing="8">
            <Label text="Total de linhas:"/>
            <Label fx:id="rowsCountLabel" text="0"/>
        </HBox>
    </VBox>
</AnchorPane>

