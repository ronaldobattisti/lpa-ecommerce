<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER"
    xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="io.github.ronaldobattisti.desktop.controllers.OrdersPaneController"
    fx:id="root">
    <!-- ...existing code... -->
    <ToolBar>
        <!-- Adicionado fx:id para poder injetar no controller -->
        <Label fx:id="welcomeLabel" text="Pedidos"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Pesquisar..."/>
        <Button text="Atualizar" fx:id="refreshButton"/>
    </ToolBar>

    <!-- Tabela principal -->
    <TableView fx:id="ordersTable" prefHeight="350" prefWidth="800" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="orderIdColumn" text="ID" prefWidth="80"/>
            <TableColumn fx:id="orderDateColumn" text="Data" prefWidth="140"/>
            <TableColumn fx:id="orderAmountColumn" text="Total" prefWidth="120"/>
            <TableColumn fx:id="paymentStatusColumn" text="Status" prefWidth="120"/>
        </columns>

        <!-- Placeholder quando vazio -->
        <placeholder>
            <Label text="Nenhum pedido encontrado."/>
        </placeholder>
    </TableView>

    <!-- RodapÃ© simples (opcional) -->
    <HBox alignment="CENTER_RIGHT" spacing="8">
        <Label text="Total de linhas:"/>
        <Label fx:id="rowsCountLabel" text="0"/>
    </HBox>
</VBox>
