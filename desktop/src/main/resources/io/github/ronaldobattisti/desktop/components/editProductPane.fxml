<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.ronaldobattisti.desktop.controllers.EditProductController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-background-color: #1e1b2e;"
      prefWidth="600"
      prefHeight="700">

    <!-- PAGE TITLE -->
    <Label text="Edit Product"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffcc4d;"
           VBox.margin="20"/>

    <!-- MAIN FORM CONTAINER -->
    <VBox spacing="18" alignment="TOP_CENTER" style="">
        <!-- ID -->
        <VBox spacing="5" prefWidth="500">
            <Label text="ID" style="-fx-text-fill: #cfcde0;"/>
            <TextField fx:id="idField" editable="false" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- NAME -->
        <VBox spacing="5" prefWidth="500">
            <Label text="Name" style="-fx-text-fill: #cfcde0;" />
            <TextField fx:id="nameField" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- DESCRIPTION -->
        <VBox spacing="5" prefWidth="500">
            <Label text="Description" style="-fx-text-fill: #cfcde0;" />
            <TextField fx:id="descriptionField" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- PRICE + QTY (side by side) -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="5">
                <Label text="Price (AUD)" style="-fx-text-fill: #cfcde0;" />
                <TextField fx:id="priceField" prefWidth="200" style="-fx-background-radius: 10;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Quantity" style="-fx-text-fill: #cfcde0;" />
                <TextField fx:id="qtyField" prefWidth="200" style="-fx-background-radius: 10;" />
            </VBox>
        </HBox>

        <!-- CATEGORY -->
        <VBox spacing="5" prefWidth="500">
            <Label text="Category" style="-fx-text-fill: #cfcde0;" />
            <ComboBox fx:id="categoryBox" prefWidth="200" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- IMAGE PATH -->
        <VBox spacing="5" prefWidth="500">
            <Label text="Image Path" style="-fx-text-fill: #cfcde0;" />
            <TextField fx:id="imagePathField" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- FILE CHOOSER -->
        <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="500">
            <Button text="Choose file"
                    fx:id="chooseFileBtn"
    />/                onAction="#onChooseFile"
                    style="-fx-background-color: #ffcc4d; -fx-text-fill: black; -fx-background-radius: 10;"/>
            <Label fx:id="fileLabel"
                   text="No file chosen"
                   style="-fx-text-fill: #ccc;" />
        </HBox>
    </VBox>

    <!-- BUTTONS -->
    <HBox spacing="30" alignment="CENTER" padding="20">
        <Button text="Cancel"
 />/               onAction="#onCancel"
                style="-fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 12; -fx-pref-width: 120;"/>

        <Button text="Update"
                fx:id="updateButton"
 />/               onAction="#onUpdate"
                style="-fx-background-color: #ffcc4d; -fx-text-fill: black; -fx-font-weight: bold;
                       -fx-background-radius: 12; -fx-pref-width: 300;"/>
    </HBox>

</VBox>
