<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" spacing="20.0" style="-fx-background-color: #1e1b2e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.ronaldobattisti.desktop.controllers.EditProductController">

    <!-- PAGE TITLE -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffcc4d;" text="Edit Product" />

    <!-- MAIN FORM CONTAINER -->
    <VBox alignment="TOP_CENTER" spacing="18" style="">
        <!-- ID -->
        <VBox prefWidth="500" spacing="5">
            <Label style="-fx-text-fill: #cfcde0;" text="ID" />
            <TextField fx:id="idField" editable="false" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- NAME -->
        <VBox prefWidth="500" spacing="5">
            <Label style="-fx-text-fill: #cfcde0;" text="Name" />
            <TextField fx:id="nameField" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- DESCRIPTION -->
        <VBox prefWidth="500" spacing="5">
            <Label style="-fx-text-fill: #cfcde0;" text="Description" />
            <TextField fx:id="descriptionField" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- PRICE + QTY (side by side) -->
        <HBox alignment="CENTER" spacing="20">
            <VBox spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Price (AUD)" />
                <TextField fx:id="priceField" prefWidth="200" style="-fx-background-radius: 10;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Quantity" />
                <TextField fx:id="qtyField" prefWidth="200" style="-fx-background-radius: 10;" />
            </VBox>
        </HBox>

        <!-- CATEGORY -->
        <VBox prefWidth="500" spacing="5">
            <Label style="-fx-text-fill: #cfcde0;" text="Category" />
            <ComboBox fx:id="categoryBox" prefWidth="200" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- IMAGE PATH -->
        <VBox prefWidth="500" spacing="5">
            <Label style="-fx-text-fill: #cfcde0;" text="Image Path" />
            <TextField fx:id="imagePathField" style="-fx-background-radius: 10;" />
        </VBox>

        <!-- FILE CHOOSER -->
        <HBox alignment="CENTER_LEFT" prefWidth="500" spacing="10">
            <Button fx:id="chooseFileBtn" onAction="#onChooseFile" style="-fx-background-color: #ffcc4d; -fx-text-fill: black; -fx-background-radius: 10;" text="Choose file" />
            <Label fx:id="fileLabel" style="-fx-text-fill: #ccc;" text="No file chosen" />
        </HBox>
    </VBox>

    <!-- BUTTONS -->
    <HBox alignment="CENTER" spacing="30">
        <Button onAction="#onCancel" style="-fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 12; -fx-pref-width: 120;" text="Cancel" />

        <Button fx:id="updateButton" onAction="#onUpdate" style="-fx-background-color: #ffcc4d; -fx-text-fill: black; -fx-font-weight: bold;                        -fx-background-radius: 12; -fx-pref-width: 300;" text="Update" />
    </HBox>
   <padding>
      <Insets left="50.0" right="50.0" />
   </padding>
</VBox>
