<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!-- Main container -->

<VBox fx:id="root"
      alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.github.ronaldobattisti.desktop.controllers.LoggedPaneController">

    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Account Settings " />
    <Label fx:id="welcomeLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Welcome to your account settings," />

    <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0">
        <!-- Email -->
        <VBox alignment="CENTER" prefWidth="300" spacing="5">
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <Hyperlink fx:id="viewOrders" onAction="#onViewOrdersClick" text="View your orders">
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </VBox.margin>
            </Hyperlink>
        </VBox>
        <!-- Password -->
        <VBox alignment="CENTER" prefWidth="300" spacing="5">
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <Hyperlink fx:id="logOut" onAction="#onLogoutClick" text="Log out">
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </VBox.margin>
            </Hyperlink>
        </VBox>
    </VBox>
</VBox>
