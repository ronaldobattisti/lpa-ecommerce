<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root"
      fx:controller="io.github.ronaldobattisti.desktop.controllers.ManageOdersPaneController"
      style="-fx-background-color: #1e1b2e;"
      alignment="TOP_CENTER">

    <!-- TITLE -->
    <Label text="Manage Orders"
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #ffcc4d;" />

    <!-- TABLE -->
    <TableView fx:id="orderTable"
               prefHeight="500"
               style="-fx-background-color: transparent;">
        <columns>
            <TableColumn fx:id="colInvId" text="Invoice" prefWidth="80"/>
            <TableColumn fx:id="colCostumerName" text="Costumer" prefWidth="250"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
            <TableColumn fx:id="colAmount" text="Total (AUD)" prefWidth="80"/>
            <TableColumn fx:id="colPaymentStatus" text="Status" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>