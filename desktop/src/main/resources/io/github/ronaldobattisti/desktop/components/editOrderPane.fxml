<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" spacing="20.0" style="-fx-background-color: #1e1b2e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.ronaldobattisti.desktop.controllers.EditOrderPaneController">

    <!-- PAGE TITLE -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffcc4d;" text="Edit Product" />

    <!-- MAIN FORM CONTAINER -->
    <VBox alignment="TOP_CENTER" spacing="18">
        <HBox prefWidth="70.0">
            <!-- Invoice number -->
            <VBox prefWidth="200.0" spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Invoice Number"/>
                <TextField fx:id="invoicenumberField" editable="false" prefHeight="25.0" style="-fx-background-radius: 10;"/>
            </VBox>

            <!-- Client Name -->
            <VBox prefWidth="500" spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Client"/>
                <TextField fx:id="clientNameField" editable="false" style="-fx-background-radius: 10;"/>
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
            </VBox>
        </HBox>

        <HBox>
            <!-- Date -->
            <VBox prefWidth="200" spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Invoice Date" />
                <TextField fx:id="invoiceDateField" editable="false" prefWidth="200" style="-fx-background-radius: 10;" />
            </VBox>

            <!-- Invoice Total Value -->
            <VBox spacing="5" prefHeight="200" alignment="CENTER">
                <Label style="-fx-text-fill: #cfcde0;" text="Price (AUD)" />
                <TextField fx:id="invoiceTotaValueField" editable="false" prefWidth="200" style="-fx-background-radius: 10;" />
            </VBox>
        </HBox>

        <!-- CATEGORY -->
        <HBox>
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Category" />
                <ComboBox fx:id="PaymentComboBox" prefWidth="200" style="-fx-background-radius: 10;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Paid" />
                            <String fx:value="Pending" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Label style="-fx-text-fill: #cfcde0;" text="Category" />
                <ComboBox fx:id="OrderStatusComboBox" prefWidth="200" style="-fx-background-radius: 10;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Packaging" />
                            <String fx:value="Shipped" />
                            <String fx:value="Processed" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>
    </VBox>

    <!-- BUTTONS -->
    <HBox alignment="CENTER" spacing="30">
        <Button onAction="#onCancel" style="-fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 12; -fx-pref-width: 120;" text="Cancel" />

        <Button fx:id="updateButton" onAction="#onUpdate" style="-fx-background-color: #ffcc4d; -fx-text-fill: black; -fx-font-weight: bold;                        -fx-background-radius: 12; -fx-pref-width: 300;" text="Update" />
    </HBox>
   <padding>
      <Insets bottom="20.0" left="50.0" right="50.0" />
   </padding>
</VBox>
